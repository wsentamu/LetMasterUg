@page "/AccountStatement"
@model LetMasterWebApp.Pages.Reports.AccountStatementModel
@{
    ViewData["Title"] = "Account Statement";
}
<a class="btn btn-sm btn-warning manage-btn" asp-page="/reports/ExpenseReport">Expense Report</a>
<a class="btn btn-sm btn-warning manage-btn" asp-page="/reports/OccupancyReport">Occupancy Report</a>
<a class="btn btn-sm btn-warning manage-btn" asp-page="/reports/PropertyTransactionReport">Property Rent Transaction Report</a>
<h2>Account Statement</h2>
<div class="mb-3">
    <form method="post">
        <div class="d-flex flex-wrap">
            <div class="form-group mr-3">
                <label for="PropertyId" class="mr-2">Property</label>
                <select id="PropertyId" name="searchModel.PropertyId" class="form-control mr-2" required>
                    <option value="">Select Property</option>
                    @foreach (var property in Model.properties!)
                    {
                        <option value="@property.Value">@property.Text</option>
                    }
                </select>
            </div>
            <div class="form-group mr-3">
                <label for="TenantAccountId" class="mr-2">Tenant Account</label>
                <select id="TenantAccountId" name="searchModel.TenantAccountId" class="form-control mr-2" required>
                    <option value="">Select Account</option>
                </select>
            </div>
            <div class="form-group mr-3">
                <label for="DateFrom" class="mr-2">Date From</label>
                <input type="date" id="DateFrom" name="searchModel.DateFrom" class="form-control mr-2" value="@Model.searchModel.DateFrom.ToString("yyyy-MM-dd")" />
            </div>
            <div class="form-group mr-3">
                <label for="DateTo" class="mr-2">Date To</label>
                <input type="date" id="DateTo" name="searchModel.DateTo" class="form-control mr-2" value="@Model.searchModel.DateTo.ToString("yyyy-MM-dd")" />
            </div>
            <div class="form-group align-self-end">
                <button type="submit" class="btn btn-primary">Search</button>
            </div>
        </div>
    </form>
</div>
@if (Model.accountStatement.AccountTransactions != null && Model.accountStatement.AccountTransactions.Count > 0)
{
    <h3 class="mt-3">Account Transactions: @Model.accountStatement.Tenant</h3>
    <div class="card-body">
        <div class="row">
            <div class="col-sm-6">
                <p class="card-text"><b>Property Name (Unit No.)</b>: @Model.accountStatement.PropertyName (@Model.accountStatement.UnitNo)</p>
                <p class="card-text"><b>Location</b>: @Model.accountStatement.PropertyAddress</p>
                <p class="card-text"><b>Current Agreed Rate.</b>: @Model.accountStatement.AgreedRate!.Value.ToString("N2")</p>
                <p class="card-text"><b>Current Balance</b>: @Model.accountStatement.CurrentBalance!.Value.ToString("N2")</p>
            </div>
            <div class="col-sm-6">
                <p class="card-text"><b>Tenant</b>: @Model.accountStatement.Tenant</p>
                <p class="card-text"><b>Email</b>: @Model.accountStatement.TenantEmail</p>
                <p class="card-text"><b>Phone</b>: @Model.accountStatement.TenantContact</p>
            </div>
        </div>
    </div>

    <table class="table table-striped mt-3">
        <thead>
            <tr>
                <th>Transaction Type</th>
                <th>Description</th>
                <th>Reference No.</th>
                <th>Mode</th>
                <th>Amount</th>
                <th>Transaction Date</th>
                <th>Date Posted</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var transaction in Model.accountStatement.AccountTransactions)
            {
                <tr>
                    <td>
                        @if (transaction.TransactionType == "D")
                        {
                            <text>DEBIT</text>
                        }
                        else if (transaction.TransactionType == "C")
                        {
                            <text>CREDIT</text>
                        }
                    </td>
                    <td>@transaction.TransactionDesc</td>
                    <td>@transaction.TransactionRef</td>
                    <td>@transaction.TransactionMode</td>
                    <td>@transaction.Amount!.Value.ToString("C")</td>
                    <td>@transaction.TransactionDate.ToString("yyyy-MM-dd")</td>
                    <td>@transaction.TransactionCreationDate?.ToString("yyyy-MM-dd")</td>
                </tr>
            }
        </tbody>
    </table>
    <form method="post" asp-page-handler="ExportToExcel">
        <input type="hidden" name="searchModel.TenantAccountId" value="@Model.searchModel?.TenantAccountId" />
        <input type="hidden" name="searchModel.TransactionType" value="@Model.searchModel?.TransactionType" />
        <input type="hidden" name="searchModel.DateFrom" value="@Model.searchModel?.DateFrom.ToString("yyyy-MM-dd")" />
        <input type="hidden" name="searchModel.DateTo" value="@Model.searchModel?.DateTo.ToString("yyyy-MM-dd")" />
        <button type="submit" class="btn btn-success mt-2" value="Export" asp-page-handler="Export">Export Data</button>
    </form>
}
else
{
    <p>No transactions found for the selected criteria.</p>
}
@section Scripts {
    <script>
        $(document).ready(function () {
            // Cascading dropdowns for property and tenant account
            $('#PropertyId').change(function () {
                var propertyId = $(this).val();
                if (propertyId) {
                    $.ajax({
                        url: '/AccountStatement?handler=TenantAccounts',
                        type: 'GET',
                        data: { propertyId: propertyId },
                        success: function (data) {
                            var accDropdown = $('#TenantAccountId');
                            accDropdown.empty();
                            accDropdown.append('<option value="">Select Account</option>');
                            $.each(data, function (index, item) {
                                accDropdown.append('<option value="' + item.value + '">' + item.text + '</option>');
                            });
                        },
                        error: function (xhr, status, error) {
                            console.error("Error: " + error);
                        }
                    });
                } else {
                    $('#TenantAccountId').empty().append('<option value="">Select Account</option>');
                }
            });
        });
    </script>
}